head
  meta(charset='utf-8')
  title Con Pug
  link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css', integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi", crossorigin="anonymous")

  body
    .modal-dialog
        .modal-content
          // Modal Header
          .modal-header

            h4#myModalLabel.modal-title
              | Lista de productos
          // Modal Body
          .modal-body
            table(class="table")
                thead
                    tr
                        th(scope="col") ID
                        th(scope="col") Producto
                        th(scope="col") Precio
                        th(scope="col") Foto
                    |
                    each item in products
                        tr
                            th= `${item.id}`
                            th= `${item.title}`
                            th= `${item.price}`
                            th= `${item.thumbnail}`


                a.btn.btn-dark(type="button", href="/") Form